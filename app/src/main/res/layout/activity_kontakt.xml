<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kontakt">

    <ImageView
        android:id="@+id/kontaktBillede"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/greve"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/kontakttekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="23dp"
        android:text="Kontakt Greve Tennisklub"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/KontaktSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Den mest fortrukne klub syd og vest for KÃ¸benhavn" />

    <TextView
        android:id="@+id/navn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kontaktBillede"
        android:layout_alignStart="@+id/kontakttekst"
        android:text="Til:" />

    <EditText
        android:id="@+id/to"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/kontakttekst"
        android:layout_below="@+id/kontaktBillede"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/emne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/kontakttekst"
        android:layout_marginTop="139dp"
        android:text="Emne:" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/kontakttekst"
        android:layout_marginTop="159dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/besked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/kontakttekst"
        android:layout_below="@+id/editText5"
        android:text="Besked:" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="320dp"
        android:layout_height="151dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/kontakttekst"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/editText6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:text="Send" />

</RelativeLayout>